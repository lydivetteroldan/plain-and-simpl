<ul class="list-unstyled posts-list">
  {{#each posts as |post|}}
    <li data-id="{{post.id}}">
      <h3 class="post-title"><a href="/posts/{{post.id}}">{{post.title}}</a></h3>
      <h4 class="post-date">{{post.date}}</h4>
      {{#if post.editable }}
        <button type="submit" class="btn btn-default text-lowercase" id="editButton">Edit</button>
      {{/if}}
    </li>
  {{/each}}
</ul>
